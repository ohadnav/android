<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.truethat.android">
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.CAMERA"/>
  <!-- For phone number and device ID -->
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

  <!-- For Affectiva -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <uses-feature android:name="android.hardware.camera.any"/>

  <application
      android:name=".application.App"
      android:allowBackup="true"
      android:fullBackupContent="@xml/backup_descriptor"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="GoogleAppIndexingWarning"
      tools:replace="android:label">
    <activity
        android:name=".view.activity.TheaterActivity"
        android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".view.activity.StudioActivity"
        android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.ATTACH_DATA"/>

        <data android:mimeType="application/octet-stream"/>
      </intent-filter>
    </activity>
    <activity android:name=".view.activity.TestActivity">
    </activity>
    <activity android:name=".view.activity.AskForPermissionActivity">
      <intent-filter>
        <action android:name="android.intent.action.ATTACH_DATA"/>

        <data android:mimeType="application/octet-stream"/>
      </intent-filter>
    </activity>
    <activity android:name=".view.activity.WelcomeActivity">
    </activity>
    <activity
        android:name=".view.activity.OnBoardingActivity"
        android:windowSoftInputMode="stateVisible">
    </activity>
    <activity
        android:name=".view.activity.RepertoireActivity"
        android:launchMode="singleTask">
    </activity>
  </application>

</manifest>