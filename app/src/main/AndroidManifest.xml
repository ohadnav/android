<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.truethat.android">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  <uses-permission android:name="android.permission.VIBRATE"/>
  <!-- For phone number and device ID -->
  <!--<uses-permission android:name="android.permission.READ_PHONE_STATE"/>-->

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <uses-feature android:name="android.hardware.camera.any"/>

  <application
      android:name=".application.App"
      android:allowBackup="true"
      android:fullBackupContent="@xml/backup_descriptor"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:largeHeap="true"
      android:roundIcon="@mipmap/ic_launcher"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="GoogleAppIndexingWarning"
      tools:replace="android:label">
    <activity
        android:name=".view.activity.SplashActivity"
        android:theme="@style/SplashTheme"
        android:windowSoftInputMode="stateHidden">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".view.activity.StudioActivity"
        android:launchMode="singleTask"
        android:windowSoftInputMode="stateHidden">
    </activity>
    <activity
        android:name=".view.activity.RepertoireActivity"
        android:launchMode="singleTask"
        android:windowSoftInputMode="stateHidden">
    </activity>
    <activity
        android:name=".view.activity.TheaterActivity"
        android:launchMode="singleTask"
        android:windowSoftInputMode="stateHidden">
    </activity>
    <activity android:name=".view.activity.AskForPermissionActivity">
      <intent-filter>
        <action android:name="android.intent.action.ATTACH_DATA"/>

        <data android:mimeType="application/octet-stream"/>
      </intent-filter>
    </activity>
    <activity android:name=".view.activity.WelcomeActivity">
    </activity>
    <activity
        android:name=".view.activity.OnBoardingActivity"
        android:launchMode="singleTask"
        android:windowSoftInputMode="stateUnchanged">
    </activity>

    <!-- Used for testing -->
    <activity
        android:name=".view.activity.TestActivity"
        android:windowSoftInputMode="stateHidden">
    </activity>

    <meta-data
        android:name="io.fabric.ApiKey"
        android:value="ddc8f05b8b5cc1630205777b73f3254602112b8e"/>
  </application>

</manifest>