<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <import type="android.view.View"/>
    <variable
        name="viewModel"
        type="com.truethat.android.viewmodel.BaseViewModel"
        />
  </data>
  <android.support.constraint.ConstraintLayout
    android:id="@+id/activityRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.TheaterActivity"
    >

    <fragment
        android:id="@+id/reactablesPagerFragment"
        android:name="com.truethat.android.view.fragment.ReactablesPagerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:detect_reactions="true"
        tools:layout="@layout/fragment_reactables_pager"
        />

</android.support.constraint.ConstraintLayout>
</layout>
